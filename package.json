{
  "name": "yozuru-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Dawid Bytys (dawid-bytys)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child -r tsconfig-paths/register src/index.ts",
    "lint": "eslint --ext .ts src",
    "test:integration": "mocha -r ts-node/register -r tsconfig-paths/register \"src/integration/**/*.test.ts\"",
    "test:unit": "mocha -r ts-node/register -r tsconfig-paths/register \"src/**/*.test.ts\" --exclude src/integration",
    "prisma:migrate": "prisma migrate dev --name init",
    "cleanup": "rm -rf dist",
    "compose": "docker-compose up -d"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/type-provider-typebox": "^3.3.0",
    "@prisma/client": "^4.16.2",
    "@sinclair/typebox": "^0.29.4",
    "bcrypt": "^5.1.0",
    "fastify": "^4.19.2",
    "jsonwebtoken": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.1",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "chai": "^4.3.7",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.6.1",
    "mocha": "^10.2.0",
    "pino-pretty": "^10.0.1",
    "prettier": "^3.0.0",
    "prisma": "^4.16.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
